# Trading Bot Configuration
# Copy this file to .env and fill in your values

# Environment
ENV=development  # development, staging, production

# Exchange API Keys - Binance
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

BINANCE_TESTNET=true  # true for testnet, false for mainnet

# Exchange API Keys - AsterDEX Futures
ASTERDEX_API_KEY=your_asterdex_api_key
ASTERDEX_API_SECRET=your_asterdex_api_secret
ASTERDEX_BASE_URL=https://fapi.asterdex.com
ASTERDEX_WS_URL=wss://fstream.asterdex.com
ASTERDEX_TESTNET=false  # AsterDEX doesn't have testnet for now 


# Database Configuration
DB_TYPE=sqlite  # sqlite, postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Trading Configuration
TRADING_MODE=paper  # paper, live
TRADING_TYPE=futures  # spot, futures
INITIAL_CAPITAL=5  # Starting with $5 for futures
MAX_POSITION_SIZE=0.1  # 10% of capital per trade
MAX_DAILY_LOSS=0.05  # 5% max daily loss

# Futures Configuration
FUTURES_LEVERAGE=10  # 1-125x (start with 10x for safety)
FUTURES_MARGIN_TYPE=ISOLATED  # ISOLATED or CROSS
FUTURES_HEDGE_MODE=false  # true for hedge mode, false for one-way mode

# Risk Management
USE_STOP_LOSS=true
STOP_LOSS_PERCENTAGE=0.02  # 2%
USE_TRAILING_STOP=true
TRAILING_STOP_PERCENTAGE=0.015  # 1.5%
MAX_DRAWDOWN=0.15  # 15%

# Telegram Notifications
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Discord Notifications
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_FILE_PATH=logs/trading_bot.log

# Machine Learning
ML_ENABLED=false
ML_MODEL_PATH=ml/models/
ML_RETRAIN_INTERVAL=24  # hours

# Backtesting
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=10000

# Performance
MAX_WORKERS=4
CACHE_ENABLED=true
